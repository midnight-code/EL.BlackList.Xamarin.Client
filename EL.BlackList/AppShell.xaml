<?xml version="1.0" encoding="UTF-8"?>
<Shell xmlns="http://xamarin.com/schemas/2014/forms" 
       xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
       xmlns:local="clr-namespace:EL.BlackList"
       xmlns:views="clr-namespace:EL.BlackList.Views"
       xmlns:model="clr-namespace:EL.BlackList.Models"
       Title="Black List"
       x:Class="EL.BlackList.AppShell"
       Shell.TabBarIsVisible="False">

    <ShellContent
        Title="Login out"
        ContentTemplate="{DataTemplate local:StartPage}"
        FlyoutItemIsVisible="False"
        Shell.FlyoutBehavior="Disabled"
        Route="MainPage" />

    <FlyoutItem Route="HomePage" FlyoutDisplayOptions="AsMultipleItems">
        <ShellContent Title="Home" Icon="{x:Static model:Icons.Dashboard}" ContentTemplate="{DataTemplate views:HomePage}"/>
        <ShellContent Title="Add Driver" Icon="{x:Static model:Icons.DriverIco}" ContentTemplate="{DataTemplate views:AddDriverPage}"/>
        <ShellContent Title="Contact" Icon="{x:Static model:Icons.ContactUs}" ContentTemplate="{DataTemplate views:ContactPage}"/>
        <ShellContent Title="About" Icon="{x:Static model:Icons.People}" ContentTemplate="{DataTemplate views:AboutPage}"/>

    </FlyoutItem>
    <Shell.FlyoutFooter>
        <StackLayout Padding="20">
            <Button Text="Log out" Command="{Binding logOutCommand}" BackgroundColor="LightGreen"/>
        </StackLayout>
    </Shell.FlyoutFooter>

</Shell>
