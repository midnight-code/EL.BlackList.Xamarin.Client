<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="EL.BlackList.Views.PaymentPage"
             xmlns:vm="clr-namespace:EL.BlackList.ViewModels"
             Shell.FlyoutBehavior="Disabled"
             Title="{Binding Title}">

    <Shell.TitleView>
        <Label Text="Оплата" TextColor="#FFFF00" FontSize="30"
       FontFamily="BLAGO"  Margin="0,15,0,0" />
    </Shell.TitleView>
    
    <ContentPage.BindingContext>
        <vm:PaymentPageViewModel />
    </ContentPage.BindingContext>
    <ContentPage.Content>
        <StackLayout>
            <Label Text="Тут вы можете пополниить личный счёт для продолжения пользованием программы."
                VerticalOptions="CenterAndExpand" 
                HorizontalOptions="CenterAndExpand" />
            <Button Text="Оплатить"/>
        </StackLayout>
    </ContentPage.Content>
</ContentPage>